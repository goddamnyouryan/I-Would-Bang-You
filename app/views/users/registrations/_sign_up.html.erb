<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<p><%= f.label :i_am_a %><br />
  <%= f.select :sex, ["Male", "Female"] %></p>

	<p>
		<%= f.label :looking_for %><br />
  	<%= f.check_box :looking_for_men %>Men <%= f.check_box :looking_for_women %>Women
	</p>

	<p><%= f.label :birthday %><br />
  <%= f.date_select :birthday, 
										:order => [:month, :day, :year],
										:start_year => Time.now.year - 99,
										:end_year => Time.now.year,
										:default => 18.years.ago %></p>

	<p><%= f.label :my_zipcode %><br />
  <%= f.text_field :zip %></p>

	<p><%= f.label :username %><br />
  <%= f.text_field :login %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>