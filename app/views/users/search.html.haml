- title "Search"

- form_tag search_path, :method => :get do
	%p
		= label_tag :age_range
		%br/
		= text_field_tag :min_age, params[:min_age] ? params[:min_age] : "18"
		= text_field_tag :max_age, params[:max_age] ? params[:max_age] : "35"
	
	%p
		= label_tag :distance
		%br/
		= select_tag :distance, options_for_select(@options_for_distance, params[:distance])
	
	%p
		= label_tag :order_by
		%br/
		= select_tag :order_by, options_for_select(@options_for_order_by, params[:order_by])
	
	%p= submit_tag "search"
	
%ul.users
	= render :partial => 'users', :collection => @results, :as => :user