<% title "#{@user.login}'s Photos" %>

<h2><%= @user.login %>'s Photos</h2>
	
<% if @user == current_user %>
	
	<% form_for([@user, @photo], :html => { :multipart => true }) do |f| %>
		<p>
			<%=f.label "choose a photo from your hard drive" %><br />
			<%= f.file_field :photo %>
		</p>
		<p>
			<%= f.label :caption %><br />
			<%= f.text_field :caption %>
		</p>
		
			<p><%= f.submit "Upload Image" %></p>
	<% end %>
	
<% end %>

<ul id="photos">
	
	<% @user.photos.each do |photo| %>
		<li>
			<%= image_tag photo.photo.url(:large) %><br />
			<%= photo.caption %>
		</li>
	<% end %>

</ul>

<ul id="edit_photos">
	
	<% @user.photos.each do |photo| %>
		<li>
			<%= image_tag photo.photo.url(:thumb) %>
			<p>
				<% unless photo.profile == true %>
					<%= link_to "make profile photo", user_photo_make_profile_path(@user, photo) %><br />
				<% else %>
					Your Profile Photo <br />
				<% end %>
				<%= link_to "re-crop", [@user, photo] %><br />
				<%= link_to "delete", [@user, photo], :method => :delete, :confirm => "Are you sure you want to delete this photo?" %>
			</p>
		</li>
	<% end %>